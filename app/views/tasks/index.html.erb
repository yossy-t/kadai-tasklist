<% if logged_in? %>
  <p>ログインユーザ名:<%= current_user.name %></p>

  <%= render 'tasks/tasks', tasks: @tasks %>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Tasklistへようこそ</h1>
      <p><%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %></p>
      <p><%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %></p>
    </div>
  </div>
<% end %>
